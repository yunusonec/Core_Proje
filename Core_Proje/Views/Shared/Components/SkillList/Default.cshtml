@using EntityLayer.Concrete
@model List<Skill>

<div class="container-narrow">
    <div class="text-center mb-5">
        <h2 class="marker marker-center">Yeteneklerim</h2>
    </div>
    <div class="text-center">
        <p class="mx-auto mb-3" style="max-width:600px">Hızlı öğrenen biriyim ve Web Uygulaması Geliştirme ve Ürün Tasarımı için gereken çok sayıda beceride uzmanım</p>
    </div>
    <div class="bg-light p-3">
        <div class="row">

            @{
                int Sayi = Model.Count / 2;
                int SkillFirstCount = Model.Count - Sayi;

                @if (Model.Count > 0)
                {
                    <div class="col-md-5">
                        @for (int i = 0; i < SkillFirstCount; i++)
                        {
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@Model[i].Title</span><span>@Model[i].Value%</span></div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @Model[i].Value%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                    </div>
                }


                @if (Model.Count > 1)
                {
                    <div class="col-md-5 offset-md-2">
                        @for (int i = 0 + SkillFirstCount; i < Model.Count; i++)
                        {
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@Model[i].Title</span><span>@Model[i].Value%</span></div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="400" data-aos-anchor=".skills-section" style="width: @Model[i].Value%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>