@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Görsel</th>
                                <th>Proje Adı</th>
                                <th>URL</th>
                                <th>Fiyat</th>
                                <th colspan="7" style="text-align: center;">Tamamlanma Oranı</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioID</td>
                                    <td><img src="@item.ImageUrl" /></td>
                                    <td>@item.Name</td>
                                    <td><a href="@item.ProjectUrl" target="_blank">@item.ProjectUrl</a></td>
                                    <td>@item.Price</td>
                                    <td colspan="7" style="text-align: center;">%@item.Value</td>
                                    <td>
                                        @if (@item.Value == 100)
                                        {
                                            <div class="badge badge-success">Tamamlandı</div>
                                        }
                                        else
                                        {
                                            <div class="badge badge-danger">Yapım Aşamasında</div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>